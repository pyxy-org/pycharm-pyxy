<idea-plugin>
  <id>org.pyxy.pyxycharm</id>
  <name>PyxyCharm</name>
  <vendor email="trey@keown.io" url="https://keown.io">Trey Keown</vendor>
  <description><![CDATA[ PyCharm support for pyxy: HTML in Python. ]]></description>

  <depends>com.intellij.modules.lang</depends>
  <depends>com.intellij.modules.python</depends>

  <extensions defaultExtensionNs="com.intellij">
    <fileTypeFactory implementation="org.pyxy.pyxycharm.PyxyFileTypeFactory"/>
    <lang.parserDefinition
            language="Pyxy"
            implementationClass="org.pyxy.pyxycharm.lang.parser.PyxyParserDefinition"/>

    <indexedRootsProvider implementation="org.pyxy.pyxycharm.lang.builtins.PyxyBuiltins"/>
    <completion.contributor language="Python"
                            implementationClass="org.pyxy.pyxycharm.lang.builtins.PyxyCompletionContributor"/>
  </extensions>


  <extensions defaultExtensionNs="Pythonid">
    <pyReferenceResolveProvider
            implementation="org.pyxy.pyxycharm.lang.builtins.PyxyReferenceResolveProvider"/>
    <dialectsTokenSetContributor
            implementation="org.pyxy.pyxycharm.lang.PyxyDialectTokenContributor" />
  </extensions>
</idea-plugin>